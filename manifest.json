{
  "manifest_version": 2,
  "name": "Highlight by poll",
  "version": "0.1",
  "description" : "Keeps finding and highlighting a string in a page",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "vendor/jquery.min.js",
        "vendor/jquery.highlight-5.js",
        "index.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "menu.html"
  },
  "permissions": [
    "storage"
  ]
}
